<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MainActivity">

    <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottonNavigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:menu="@menu/navigation"
            android:background="?android:windowBackground"
    />
    <FrameLayout android:id="@+id/mainflContent"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_above="@id/bottonNavigationView"
    />
    <android.support.v7.widget.Toolbar android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:layout_alignParentTop="true"
                                       android:layout_marginEnd="@dimen/toolbar_margin_end">
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/toolbar_margin_top">
            <ImageView android:id="@+id/iv_preferences"
                       android:layout_width="@dimen/toolbar_preferences_width"
                       android:layout_height="@dimen/toolbar_preferences_height"
                       android:src="@drawable/white_menu_icon"
                       android:layout_alignParentEnd="true"


            />
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

</RelativeLayout>